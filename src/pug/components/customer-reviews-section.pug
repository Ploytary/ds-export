section.section.customer-reviews-section
  h2.section__title= customerReviewsSectionContent.title
  p.section__subtitle!= customerReviewsSectionContent.description
  ul.customer-reviews-section__text-reviews 
    each textReview in customerReviewsSectionContent.textReviewList
      li.customer-reviews-section__text-review
        figure.text-review-card
          figcaption.text-review-card__rating 
            span.text-review-card__digit= textReview.rating.toString().replace('.', ',')
            - const starsCount = 5;
            - const size = textReview.rating / starsCount * 100;
            span.text-review-card__decor-icons(style= `--rating-percent: ${size}%`)
              each star in Array(starsCount)
                span
          blockquote.text-review-card__text= textReview.text
          p.text-review-card__niche= 'Ниша: ' + textReview.niche
  ul.customer-reviews-section__video-reviews
    each videoReview, index in customerReviewsSectionContent.videoReviewList
      li.customer-reviews-section__video-review
        figure.video-review-card
          figcaption.video-review-card__title= `Отзыв ${index + 1}: ` + videoReview.title
          .brand-videoplayer.video-review-card__videoplayer
            video(src=videoReview.videoSrc)
