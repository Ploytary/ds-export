section.section.service-prices-section
  h2.section__title
    span!= servicePricesSectionContent.title
  p.section__subtitle.service-prices-section__description= servicePricesSectionContent.description
  ul.service-prices-section__pricelist 
    each card, index in servicePricesSectionContent.priceList
      - const accentItemClass = index === 1 ? 'service-price-card--highlighted' : false;
      li.service-prices-section__pricelist-item 
        article.service-price-card(class = accentItemClass)
          header.service-price-card__headline
            p.service-price-card__category= card.category
            h3.service-price-card__title!= card.title
          .service-price-card__content 
            p.service-price-card__description= card.description
            ul.service-price-card__features.brand-check-list
              each feature, index in card.features
                - const accentItemClass = index === 1 ? 'service-price-card__feature-item--accent' : false;
                li.service-price-card__feature-item(class = accentItemClass)
                  p= feature
          +main-button(card.button.label)(href= card.button.url, accent)